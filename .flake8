[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .coverage,
    htmlcov,
    resume_cli.egg-info

# Error codes to ignore
ignore =
    # E203 whitespace before ':'
    E203,
    # W503 line break before binary operator
    W503,

# Show complexity
max-complexity = 10
