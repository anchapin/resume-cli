{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "ResumeAI Desktop",
    "version": "1.0.0",
    "identifier": "com.resumeai.desktop",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:1420",
        "beforeDevCommand": "",
        "beforeBuildCommand": ""
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "ResumeAI Desktop",
                "width": 1200,
                "height": 800,
                "minWidth": 900,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [],
        "category": "Productivity",
        "shortDescription": "Professional resume management and job application tracking",
        "longDescription": "ResumeAI Desktop is a comprehensive desktop application for managing resumes, generating tailored applications, and tracking job applications. Features include AI-powered resume customization, cover letter generation, application tracking with analytics, and GitHub integration.",
        "copyright": "MIT License",
        "resources": [],
        "externalBin": [],
        "createUpdaterArtifacts": false
    },
    "plugins": {
        "fs": {
            "scope": {
                "allow": [
                    "**/*"
                ],
                "requireLiteralLeadingDot": false
            }
        },
        "dialog": true,
        "shell": {
            "open": true
        }
    }
}
